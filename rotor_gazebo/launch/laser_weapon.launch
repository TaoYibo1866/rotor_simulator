<launch>
  <arg name="world_name" default="green_field"/>
  <arg name="paused" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="use_sim_time" default="false"/>
  
  <include file="$(find rotor_gazebo)/launch/world.launch">
    <arg name="world_name" value="$(arg world_name)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
  </include>

  <group ns="rotor2">
    <include file="$(find rotor_gazebo)/launch/spawn_robot.launch">
      <arg name="model" value="rotor2" />
      <arg name="namespace" value="rotor2" />
      <arg name="is_kinematic" value="true"/>
      <arg name="x" value="-10"/>
      <arg name="y" value="0"/>
      <arg name="z" value="0"/>
      <arg name="R" value="0"/>
      <arg name="P" value="0"/>
      <arg name="Y" value="0"/>
    </include>
  </group>

  <node name="image_view" pkg="image_view" type="image_view" args="image:=/camera/image_raw">
    <param name="autosize" type="bool" value="true"/>
  </node>

</launch>
